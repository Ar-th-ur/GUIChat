<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guichat.HelloController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <VBox prefHeight="400" prefWidth="200">
        <VBox fx:id="usersList" prefHeight="400.0" prefWidth="200.0" />
    </VBox>
    <VBox prefHeight="400" prefWidth="300">
        <TextArea fx:id="chatField" editable="false" prefHeight="400.0" prefWidth="300.0" />
        <HBox prefHeight="100.0" prefWidth="200.0">
            <TextField fx:id="messageField" prefHeight="26.0" prefWidth="200.0" />
            <Button fx:id="sendMessageButton" disable="true" onAction="#sendMessage" text="Отправить" />
        </HBox>
        <Button fx:id="connectToServerButton" onAction="#connect" text="Подключиться к серверу" />
    </VBox>
</HBox>
